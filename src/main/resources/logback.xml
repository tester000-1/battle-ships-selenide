<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define the Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- <pattern>%d{yyyy-MM-dd HH:mm:ss} - %level - %logger{36} - %msg%n</pattern>-->
            <pattern>%highlight(%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n){FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=cyan, TRACE=blue}</pattern>
        </encoder>
    </appender>

    <!-- Define the File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>record.txt</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %level - %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger configuration -->
    <root level="debug">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Logger for specific packages or classes -->
    <logger name="com.test" level="debug"/>

</configuration>
